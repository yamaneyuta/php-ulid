{
    "name": "yutayamane/php-ulid",
    "description": "ULID library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "yutayamane\\": "src/"
        }
    },
    "require": {
        "php-64bit": "^7.1|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "scripts": {
        "coverage": "rm -rf reports && phpunit --testdox --coverage-html reports --coverage-clover=reports/clover.xml",
        "// PHPのバージョンが7.2以上と7.2未満で分岐": "",
        "test": "php -r 'exit(PHP_VERSION_ID < 70200 ? 1 : 0);'; if [ $? -eq 0 ]; then phpunit --testdox; else phpunit; fi"
    }
}
