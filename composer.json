{
    "name": "yutayamane/php-ulid",
    "description": "ULID library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "yutayamane\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "require": {
        "php-64bit": "^7.1|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "coverage": "rm -rf reports && phpunit --testdox --coverage-html reports --coverage-clover=reports/clover.xml",
		"format": "phpcbf --standard=PSR12 src tests",
		"lint": "phpcs --standard=PSR12 src tests",
        "test": "phpunit --testdox"
    }
}
