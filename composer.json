{
    "name": "yutayamane/php-ulid",
    "description": "ULID library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "yutayamane\\": "src/classes"
        },
        "files": [
            "src/functions/ulid.php"
        ]
    },
    "require": {
        "php-64bit": "^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "coverage": "rm -rf reports && phpunit --testdox --coverage-html reports --coverage-clover=reports/clover.xml",
		"format": "phpcbf --standard=PSR12 src tests",
		"lint": [
            "@lint:php",
            "@lint:phpcs"
        ],
        "lint:php": "find src tests -name '*.php' -exec php -l {} \\;",
        "lint:phpcs": "phpcs",
        "test": "phpunit --testdox"
    }
}
